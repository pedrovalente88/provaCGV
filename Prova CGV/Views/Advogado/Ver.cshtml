@model Prova_CGV.Models.AdvogadoModel

@{
    ViewBag.Title = "Ver";
}

<h2>Ver</h2>

<div>
    <h4>Dados do Advogado</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Senioridade)
        </dt>

        <dd>
            @(Prova_CGV.Models.AdvogadoModel.GetSenioridadeTexto(Model.Senioridade))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Endereco.Logradouro)
